<p id="notice"><%= notice %></p>

<p>
  <strong>Job Board Level:</strong>
  <%= @job_board.level %>
</p>
<div class="row">
  <% @job_board.jobs.each do |job| %>
      <div class="col s12 m6 l4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">A new Job</span>
            <p>I give some flavor text. I pay <%= job.money %> money and require <%= job.time %> time...</p>
          </div>
          <div class="card-action">
            <%= link_to 'Start working', start_job_path %>
          </div>
        </div>
      </div>
  <% end %>
</div>
<%= link_to 'Edit', edit_job_board_path(@job_board) %> |
<%= link_to 'Back', job_boards_path %>
