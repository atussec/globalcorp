<div class="col s12 jobs-card-<%= job.hash_num %>" id="job-<%= job.id %>">
  <div>
    <span>A new Job</span>
    <p>I give some flavor text. I pay <%= job.money %> money and require <%= job.time %> time...</p>
  </div>
  <% if @player.skill >= job.skill %>
      <div class="start-job">
        <%= link_to 'Start working', start_job_path(id: job.id) %>
      </div>
  <% else %>
      <div class="start-job">
        Needs <%= job.skill %> skill
      </div>
  <% end %>
</div>
